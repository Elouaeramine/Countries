{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["ES5"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    // "outFile": "index.es5.min.js",
    "plugins": [
      {
        "name": "typescript-eslint-language-service"
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": [],
  "include": ["./src/index.ts"],
}
